{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div class="row justify-content-center">
      <div class="col-8 ">
        <div class=" boxSha bg-light mb-3 mt-5" >
            <h1 class="h3 bg-dark text-white mb-3 text-center font-weight-normal">Registration Form</h1>
            <div class="row">
              

              <div class="card-body">
              {{ form_start(registrationForm) }}
              <div class="form_group row justify-content-center">
                <div class="col-8 p-2 mb-3">
                  {{ form_row(registrationForm.firstName, {'attr': {'class': 'form-control'}}) }}
                </div>
              </div>

              <div class="form_group row justify-content-center">
                <div class="col-8 p-2 mb-3">
                  {{ form_row(registrationForm.lastName, {'attr': {'class': 'form-control'}}) }}
                </div>
              </div>

              <div class="form_group row justify-content-center">
                <div class="col-8 p-2 mb-3">
                  {{ form_row(registrationForm.phone, {'attr': {'class': 'form-control'}}) }}
                </div>
              </div>

              <div class="form_group row justify-content-center">
                <div class="col-8 p-2 mb-3">
                  {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                </div>
              </div>
              
              <div class="form_group row justify-content-center">
                <div class="col-8 p-2 mb-3">
                  {{ form_row(registrationForm.birthday, {'attr': {'class': 'form-control'}}) }}
                </div>
              </div>

              <div class="form_group row justify-content-center">
                <div class="col-8 p-2 mb-3">
                  {{ form_row(registrationForm.username, {'attr': {'class':
                  'form-control'}}) }}
                </div>
              </div>

              <div class="form_group row justify-content-center">
                <div class="col-8 p-2 mb-3">
                  {{ form_row(registrationForm.plainPassword.first, {'attr': {'class':
                  'form-control'}}) }}
                </div>
              </div>

              <div class="form_group row justify-content-center">
                <div class="col-8 p-2 mb-3">
                  {{ form_row(registrationForm.plainPassword.second, {'attr': {'class':
                  'form-control'}}) }}
                </div>
              </div>

            </div>
              <div class="row m-0 p-0">
                <div class="col-12 ">
                    <button type="submit" class="col-12 mt-5 btn btn btn_personaliser">
                      <i class="fa fa-btn fa-user"></i> Register
                    </button>
                </div>
                {{ form_end(registrationForm) }}
              </div>
            </div>
        </div>
      </div>
    </div>

{% endblock %}
